generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Policy {
  id         String   @id @default(uuid())
  title      String
  source_url String   @unique
  content    String   @db.Text
  category   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([category])
  @@map("policies")
}
